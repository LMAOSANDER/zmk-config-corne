#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSPC |
// | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
//                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |
                        bindings = <
   &kp TAB   &kp Q &kp W &kp F &kp P &kp B   &kp J &kp L  &kp U     &kp Y   &kp SEMI &kp BSPC
   &kp ESC   &kp A &kp R &kp S &kp T &kp G   &kp M &kp N  &kp E     &kp I   &kp O    &kp RET
   &kp LCTRL &kp Z &kp X &kp C &kp D &kp V   &kp K &kp H  &kp COMMA &kp DOT &kp FSLH &kp SQT
                  &kp LGUI &mo 1 &kp SPACE   &kp LSHFT &mo 2 &kp RALT
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BSPC |
// | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
// | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp TAB   &kp FSLASH &kp N9 &kp N8 &kp N7 &kp ASTRK       &trans   &trans   &trans &trans    &trans &kp BSPC
   &kp ESC   &kp minus  &kp N3 &kp N2 &kp N1 &kp plus        &kp LEFT &kp DOWN &kp UP &kp RIGHT &trans &trans
   &kp LCTRL &kp x      &kp N6 &kp N5 &kp N4 &kp prcnt       &trans   &trans   &trans &trans    &trans &trans
                             &kp LGUI &trans &kp SPACE       &kp LSHIFT &trans &kp RALT
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BSPC |
// | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
// | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp tab   &kp grave &kp LT    &kp GT     &kp minus &kp pipe   &kp caret &kp lbrc  &kp rbrc  &kp dllr &kp under &kp bspc
   &kp lctrl &kp excl  &kp ASTRK &kp FSLASH &kp EQUAL &kp amps   &kp hash  &kp lpar  &kp rpar  &kp SEMI &kp DQT   &kp RET
   &kp lshft &kp tilde &kp plus  &kp lbkt   &kp rbkt  &kp prcnt  &kp at    &kp COLON &kp COMMA &kp DOT  &kp bslh  &kp SQT
                                      &kp LGUI &trans &kp space  &kp ret &trans &kp ralt
                        >;
                };
        };
};
